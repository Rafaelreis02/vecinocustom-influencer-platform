{
  "manifest_version": 3,
  "name": "VecinoCustom TikTok Helper",
  "version": "1.0.0",
  "description": "Adiciona vídeos TikTok à plataforma VecinoCustom com um clique",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.tiktok.com/*",
    "https://vecinocustom-influencer-platform.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
